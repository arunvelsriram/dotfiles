# Intentionally not added email to get a warning message when making
# the first commit so that I will get reminded of setting email in the
# git repo locally (without affecting global git config). This prevents
# committing with wrong email addresses to a certain extent.

[user]
  name = Arunvel Sriram

# Set the git config email to client given email when the git repo is
# inside ~/TW-Client/ directory

[includeIf "gitdir:~/TW-Client/"]
  path = .gitconfig-tw-client

[core]
  editor = nvim
  whitespace = trailing-space,space-before-tab
[color]
	  ui = auto
[alias]
	st = status
	lg = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
	pl = pull
	plr = pull --rebase
	ps = push
	co = checkout
	br = branch
	d = diff
	ci = commit
	a = add
	ap = add -p
	ds = diff --staged
	sts = stash
	stsp = stash pop
  stsa = stash apply
[apply]
  whitespace = fix
