	signingkey = ~/.ssh/id_ed25519.pub

# work specific gitconfig for all
# projects inside ~/work/ directory
[includeIf "gitdir:~/work/"]
	path = .gitconfig-work

[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
	pager = delta
[interactive]
	diffFilter = delta --color-only
[color]
	ui = true
[apply]
	whitespace = fix
[init]
	templatedir = ~/.git-template
	defaultBranch = main
[gpg]
    format = ssh
[commit]
	gpgsign = true
	template = ~/.gitmessage
[push]
    autoSetupRemote = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

[delta]
    navigate = true
    line-numbers = true

[alias]
	statuses = "!for repo in $(find * -type d -maxdepth 0); do echo \"\\n=========$repo==========\\n\" && git -C $repo status; done"
	fetch-pull-requests = fetch origin '+refs/pull/*/head:refs/remotes/origin/pull/*'
	ahead-of-master = log --oneline origin/master..HEAD
	roots = log --all --oneline --decorate --max-parents=0
	unpushed = log @{u}..
	work-in-progress = rebase -i @{u}
