[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
	pager = delta
[interactive]
	diffFilter = delta --color-only
[color]
	ui = true
[apply]
	whitespace = fix
[init]
	templatedir = ~/.git-template
	defaultBranch = main
[commit]
	gpgsign = true
	template = ~/.gitmessage
[push]
    autoSetupRemote = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

[delta]
    navigate = true
    line-numbers = true

[alias]
	statuses = "!for repo in $(find * -type d -maxdepth 0); do echo \"\\n=========$repo==========\\n\" && git -C $repo status; done"
